{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "outDir": "dist/js",
        "rootDir": "src/js",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["dom", "es6"]
    },
    "include": [
        "src/js/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}